# Script to install different Haskell packages from Hackage 

cabal update

cabal new-install --symlink-bindir=~/Software/ghc/bin cabal-install 
cabal new-install --symlink-bindir=~/Software/ghc/bin alex 
cabal new-install --symlink-bindir=~/Software/ghc/bin happy 
cabal new-install --symlink-bindir=~/Software/ghc/bin haddock 
cabal new-install --symlink-bindir=~/Software/ghc/bin hlint 
cabal new-install --symlink-bindir=~/Software/ghc/bin pandoc 

