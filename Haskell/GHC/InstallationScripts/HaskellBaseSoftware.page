# Install Haskell base software

~~~
# Script to install different Haskell packages from Hackage 

switchghc x.y.z

cabal update

cp $HOME/Software/ghc-a.b.c/bin/cabal $HOME/Software/ghc/bin/cabal_old       # a.b.c = previous GHC version
cabal_old  new-install --symlink-bindir=$HOME/Software/ghc/bin --overwrite-policy=always cabal-install
rm $HOME/Software/ghc/bin/cabal_old

cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin alex 
cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin happy 
cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin haddock 
cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin hlint 
cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin pandoc 
cabal new-install --overwrite-policy=always --symlink-bindir=$HOME/Software/ghc/bin cabal2nix

 
~~~