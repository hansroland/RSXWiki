# get distribution   
cd $HOME/Downloads  
wget https://downloads.haskell.org/~ghc/8.6.1-beta1/ghc-8.6.0.20180810-x86_64-deb8-linux.tar.xz

tar xvfJ ghc-8.6.0.20180810-x86_64-deb8-linux.tar.xz

cd ghc-8.6.0.20180810 

# install  
mkdir $HOME/Software/ghc-8.6.1  

./configure --prefix=$HOME/Software/ghc-8.6.1  
make install

# cleanup: remove temporary files  
cd ..  
rm -rfv ghc-8.6.0*